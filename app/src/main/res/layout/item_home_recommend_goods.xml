<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:id="@+id/root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/live_list_avr"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:scaleType="centerCrop"
            android:src="@mipmap/list_image"
            app:riv_corner_radius="@dimen/dp_50"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:maxLength="12"
            android:ellipsize="end"
            android:layout_weight="1"
            android:text="直播列表标题"/>

        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_28"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:drawablePadding="0dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/back_live_title_tag"
            android:text="未直播"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="242dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/list_image"
            app:riv_corner_radius="2dp" />

        <TextView
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_28"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/back_live"
            android:text="Live"/>


        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_28"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:drawablePadding="0dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_15"
            android:drawableLeft="@mipmap/live_list_number"
            android:background="@drawable/back_live_number"
            android:text="123.5万"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百家讲师-丽丽"
            android:textColor="#64505050"
            android:textSize="14dp"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/list_live_user"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昆明"
            android:textColor="#64505050"
            android:textSize="14dp"
            android:drawablePadding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/list_live_position"/>

    </RelativeLayout>




</LinearLayout>