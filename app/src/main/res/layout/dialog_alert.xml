<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/shape_wifi">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:textColor="@color/main_text"
        android:textSize="@dimen/text_size_01"
        android:gravity="center"
        android:text="Title"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.1"
        android:padding="30dp"
        android:textColor="@color/main_text"
        android:text="AlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialogAlertDialog" />


    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:paddingTop="10dp"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Cancel"
            android:textColor="@color/main_text"
            android:visibility="gone" />

        <View
            android:id="@+id/divider"
            android:visibility="gone"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#eee"/>

        <Button
            android:paddingTop="10dp"
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="OK"
            android:textColor="@color/colorRed" />
    </LinearLayout>
</LinearLayout>
